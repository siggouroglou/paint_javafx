<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefWidth="400.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.unipi.computergraphics.controller.shapeEdit.LineEditController">
    <stylesheets>
        <URL value="@/files/css/basic/commons.css" />
    </stylesheets>
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label styleClass="title-big" text="Επεξεργασια Σχηματος" />
                <Label prefHeight="30.0" styleClass="title-description" text="Σας δυνετε η δυνατοτητα να επεξεργαστειτε τις ιδιοτητες του σχηματος που επιλεξατε." wrapText="true" />
                <GridPane vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="182.0" minWidth="10.0" prefWidth="118.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="262.0" minWidth="10.0" prefWidth="262.0" />
                    </columnConstraints>
                    <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                    <children>
                        <Label text="Χρωμα" GridPane.rowIndex="2" />
                        <Label text="Παχος" GridPane.rowIndex="3" />
                        <ColorPicker fx:id="shapePropertyColor" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Slider fx:id="shapePropertyWidth" blockIncrement="1.0" majorTickUnit="1.0" max="5.0" min="1.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="Σημειο Αρχης" />
                  <Label text="Σημειο Τελους" GridPane.rowIndex="1" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="1">
                     <children>
                        <TextField fx:id="fromXNode" promptText="X" />
                        <Label text="x" />
                        <TextField fx:id="fromYNode" promptText="Y" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <TextField fx:id="toXNode" promptText="X" />
                        <Label text="x" />
                        <TextField fx:id="toYNode" promptText="Y" />
                     </children>
                  </HBox>
                    </children>
                </GridPane>
            <Label fx:id="errorLabel" styleClass="error-text">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button cancelButton="true" mnemonicParsing="false" onAction="#cancelClick" text="Ακυρο" />
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#saveClick" text="Αποθηκευση" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
